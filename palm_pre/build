#! /bin/bash

cmake .. \
  -DFALCON_WITH_INTERNAL_PCRE="ON" \
  -DFALCON_WITH_INTERNAL_ZLIB="ON" \
  -DFALCON_BUILD_DOCS="OFF" \
  -DFALCON_BUILD_MODULES="OFF" \
  -DFALCON_BUILD_FWKS="OFF" \
  -DFALCON_BUILD_APPS="OFF" \
  -DFALCON_BUILD_GTK="OFF" \
  -DFALCON_WITH_MANPAGES="OFF" \
  -DFALCON_BUILD_MONGODB="OFF" \
  -DFALCON_BUILD_DBI="OFF" \
  -DCMAKE_TOOLCHAIN_FILE=webos_pre_mac.cmake
